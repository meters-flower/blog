<%- include header %>
    <br>
    <% if(user && user.name === post.name) { %>
        <p>
            <span><a class="op-btn" href="/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">编辑</a></span>
            <span><a class="op-btn" href="/remove/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">删除</a></span>
        </p>  
    <% } %> 
    <p> 
        作者：<a href="/u/<%= post.name %>"><%= post.name %></a>　|　
        日期：<%= post.time.minute %>
    </p>
    <p><%- post.post %></p>
    <p>阅读：<%- post.pv %>　|　评论：<%- post.comments.length %></p>
<%- include comment %>
<%- include footer %>
